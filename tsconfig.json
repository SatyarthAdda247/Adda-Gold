{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@services/*": ["app/services/*"],
      "@store/*": ["app/store/*"],
      "@theme/*": ["app/theme/*"],
      "@hooks/*": ["app/hooks/*"],
      "@mock/*": ["mock/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}

